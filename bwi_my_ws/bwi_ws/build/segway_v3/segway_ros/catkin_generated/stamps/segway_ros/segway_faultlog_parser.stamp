from segway.faultlog_parser import FaultlogParser
from segway_msgs.msg import Faultlog
import rospy

if __name__ == "__main__":
    """
    Initialize the node
    """
    rospy.init_node('segway_faultlog_parser')
    
    """
    Wait for a faultlog message and then parse it
    """
    try:
        faultlog_array = rospy.wait_for_message("/segway/feedback/faultlog", Faultlog,1.0)
        FaultlogParser(faultlog_array)
        rospy.loginfo("Faultlog successfully parsed!")
    except:
        rospy.logerr("Could not subscribe to faultlog topic make sure the driver is running")
    

